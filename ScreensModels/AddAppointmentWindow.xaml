<Window x:Class="ClinicQueueManagement.AddAppointmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClinicQueueManagement"
        mc:Ignorable="d"
        Title="AddAppointmentWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Label Content="Appointment Time:" HorizontalAlignment="Left" Margin="115,126,0,0" VerticalAlignment="Top" Height="23" Width="140"/>
            <TextBox x:Name="AppointmentTimeTextBox" HorizontalAlignment="Left" Margin="260,129,0,0" TextWrapping="Wrap" Text="00:00" VerticalAlignment="Top" Width="200" Height="23" TextChanged="AppointmentTimeTextBox_TextChanged"/>
            <Button Content="Clinic 1" HorizontalAlignment="Left" Margin="160,219,0,0" VerticalAlignment="Top" Width="105" Height="45" ClickMode="Press" Click="Clinic1Button_Click"/>
        </Grid>

    </Grid>
</Window>
